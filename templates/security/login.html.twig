{% extends 'base.html.twig' %}

{% block title %}Entrar{% endblock %}

{% block body %}
<section class="card" style="max-width: 520px; margin: 0 auto;">
    <h1>Inicia sesión</h1>
    <p class="muted">Accede al castillo y continúa la magia.</p>

    {% if error %}
        <div class="alert danger">{{ error.messageKey|trans(error.messageData, 'security') }}</div>
    {% endif %}

    {% if app.user %}
        <div class="alert">
            Ya has iniciado como <strong>{{ app.user.userIdentifier }}</strong>.
            <a href="{{ path('app_logout') }}">Salir</a>
        </div>
    {% endif %}

    <form method="post">
        <input type="hidden" name="_csrf_token" data-controller="csrf-protection" value="{{ csrf_token('authenticate') }}">

        <div>
            <label for="inputUsername">Usuario</label>
            <input type="text" value="{{ last_username }}" name="username" id="inputUsername" autocomplete="username" required autofocus>
        </div>

        <div>
            <label for="inputPassword">Contraseña</label>
            <input type="password" name="password" id="inputPassword" autocomplete="current-password" required>
        </div>

        <label style="display:flex;align-items:center;gap:8px;color:var(--muted);">
            <input type="checkbox" name="_remember_me" style="width:auto;">
            Recuérdame
        </label>

        <button class="btn-primary" type="submit">Entrar</button>
    </form>

    <div class="divider"></div>
    <p class="muted">¿Aún no tienes cuenta? <a href="{{ path('app_register') }}">Regístrate</a></p>
</section>
{% endblock %}
