{% extends 'base.html.twig' %}

{% block title %}Registro{% endblock %}

{% block body %}
<section class="card" style="max-width: 520px; margin: 0 auto;">
    <h1>Crea tu cuenta</h1>
    <p class="muted">El sombrero seleccionador elegirá tu casa.</p>

    {{ form_errors(registrationForm) }}

    {{ form_start(registrationForm) }}
        {{ form_row(registrationForm.username, {'label': 'Usuario'}) }}
        {{ form_row(registrationForm.plainPassword, {'label': 'Contraseña'}) }}
        {{ form_row(registrationForm.agreeTerms, {'label': 'Acepto las reglas del castillo'}) }}

        <button type="submit" class="btn-primary">Registrarse</button>
    {{ form_end(registrationForm) }}

    <div class="divider"></div>
    <p class="muted">¿Ya tienes cuenta? <a href="{{ path('app_login') }}">Inicia sesión</a></p>
</section>
{% endblock %}
